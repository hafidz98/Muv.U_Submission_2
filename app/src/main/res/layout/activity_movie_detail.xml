<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".MovieDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/iv_movie_poster_detail"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/item_poster"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_a_star" />

        <TextView
            android:id="@+id/tv_movie_tittle_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:paddingEnd="10dp"
            android:text="@string/item_tittle"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/synopsis"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_movie_desc_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_syno"
        android:textSize="14sp" />

</LinearLayout>